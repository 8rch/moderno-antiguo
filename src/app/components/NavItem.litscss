:host{
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column; 
    border-radius: 50%;
    cursor: pointer;
    width: 40px;
    height: 40px;
    flex-shrink: 0;
    padding: 10px;
    transition: background 0.4s;
}

:host(:hover) {
    background: #e9e9e9;
}

.label{
    font-size: 0.7rem;
    text-align: center;
}